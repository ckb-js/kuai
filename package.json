{
  "name": "kuai",
  "version": "0.0.1",
  "description": "A framework for building dApps on Nervos",
  "repository": "https://github.com/ckb-js/kuai.git",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "packages/samples/*"
  ],
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "lerna run build",
    "test": "lerna run test",
    "lint": "eslint 'packages/*/{src,__tests__}/**/*.ts'",
    "prepare": "husky install",
    "format:check": "prettier -cu packages/**/src/*",
    "format:write": "prettier -wu packages/**/src/*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "lerna": "7.1.4",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "**/*": [
      "prettier -wu",
      "npx eslint"
    ]
  }
}
